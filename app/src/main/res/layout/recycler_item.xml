<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recService"
            android:text="service"
            android:textColor="@color/dark"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/recDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/recSymptom"
            android:text="date"
            android:textColor="@color/dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recDate"
            android:layout_marginTop="10dp"
            android:text="time"
            android:textColor="@color/dark"
            android:textSize="20sp" />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/recReas"-->
<!--            android:text="reason"-->
<!--            android:textColor="@color/dark"-->
<!--            android:textSize="20sp"-->
<!--            android:layout_below="@id/recService"-->
<!--            android:layout_marginTop="10dp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recSymptom"
            android:text="symptom"
            android:layout_marginTop="10dp"
            android:textColor="@color/dark"
            android:textSize="20sp"
            android:layout_below="@id/recService"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>